<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base FinPessoal -->
    <style name="Base.Theme.FinPessoal" parent="Theme.Material3.Dark">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/primaryYellow</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryContainer">@color/primaryYellow</item>
        <item name="colorOnPrimaryContainer">@color/onPrimary</item>

        <!-- Cores secundárias -->
        <item name="colorSecondary">@color/primaryYellowLight</item>
        <item name="colorOnSecondary">@color/onPrimary</item>
        <item name="colorSecondaryContainer">@color/primaryYellowLight</item>
        <item name="colorOnSecondaryContainer">@color/onPrimary</item>

        <!-- Cores de superfície -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorSurfaceVariant">@color/surface_container</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Cores de fundo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onSurface</item>

        <!-- Cores de erro -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_red</item>
        <item name="colorOnErrorContainer">@color/white</item>

        <!-- Cores de outline -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!-- Cores de surface containers -->
        <item name="colorSurfaceContainer">@color/surface_container</item>
        <item name="colorSurfaceContainerHigh">@color/surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/surface_container_highest</item>

        <!-- Estilos de sistema -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primaryBlack</item>
        <item name="android:navigationBarColor">@color/primaryBlack</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Estilos de componentes Material Design -->
        <item name="materialButtonStyle">@style/Widget.FinPessoal.Button</item>
        <item name="textInputStyle">@style/Widget.FinPessoal.TextInputLayout</item>
        <item name="floatingActionButtonStyle">@style/Widget.FinPessoal.FAB</item>
        <item name="bottomNavigationStyle">@style/Widget.FinPessoal.BottomNavigation</item>
        <item name="cardViewStyle">@style/Widget.FinPessoal.CardView</item>
    </style>

    <!-- Tema principal -->
    <style name="Theme.FinPessoal" parent="Base.Theme.FinPessoal">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema para diálogos -->
    <style name="Theme.FinPessoal.Dialog" parent="Theme.Material3.Dark.Dialog">
        <item name="colorPrimary">@color/primaryYellow</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:windowBackground">@color/surface</item>
    </style>

    <!-- Tema para AlertDialogs -->
    <style name="Theme.FinPessoal.AlertDialog" parent="ThemeOverlay.Material3.Dark">
        <item name="android:windowBackground">@color/surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
    </style>

    <!-- Estilos personalizados para componentes -->

    <!-- CardView -->
    <style name="Widget.FinPessoal.CardView" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FinPessoal.Medium</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Button -->
    <style name="Widget.FinPessoal.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primaryYellow</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FinPessoal.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.FinPessoal.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/surface_container</item>
        <item name="boxStrokeColor">@color/outline</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FinPessoal.Medium</item>
        <item name="startIconTint">@color/primaryYellow</item>
        <item name="endIconTint">@color/primaryYellow</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.FinPessoal.FAB" parent="Widget.Material3.FloatingActionButton">
        <item name="backgroundTint">@color/primaryYellow</item>
        <item name="tint">@color/onPrimary</item>
        <item name="elevation">8dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FinPessoal.Large</item>
    </style>

    <!-- Chip -->
    <style name="Widget.FinPessoal.Chip" parent="Widget.Material3.Chip.Assist.Elevated">
        <item name="chipBackgroundColor">@color/surface_container</item>
        <item name="chipStrokeColor">@color/outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FinPessoal.Small</item>
    </style>

    <!-- Progress Bar -->
    <style name="Widget.FinPessoal.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackColor">@color/surface_container</item>
        <item name="color">@color/primaryYellow</item>
    </style>

    <!-- Switch -->
    <style name="Widget.FinPessoal.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="trackColor">@color/surface_container</item>
        <item name="thumbColor">@color/primaryYellow</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.FinPessoal.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
        <item name="itemRippleColor">@color/ripple_color</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.FinPessoal.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.FinPessoal.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.FinPessoal.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>