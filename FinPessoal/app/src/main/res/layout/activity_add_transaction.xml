<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlack"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/primaryYellow"
                android:contentDescription="Voltar"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/btnBack" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nova Transação"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Ícone decorativo -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_transaction_add"
                    android:tint="@color/primaryYellow"
                    android:contentDescription="Adicionar transação"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar Transação"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preencha os dados da transação"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Descrição -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.FinPessoal.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:startIconDrawable="@drawable/ic_description"
                    app:startIconTint="@color/primaryYellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descrição"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:maxLines="1"
                        android:imeOptions="actionNext" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Valor -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.FinPessoal.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:startIconDrawable="@drawable/ic_money"
                    app:startIconTint="@color/primaryYellow"
                    app:prefixText="R$ "
                    app:prefixTextColor="@color/primaryYellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Valor"
                        android:inputType="numberDecimal|numberSigned"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:maxLines="1"
                        android:imeOptions="actionNext" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Data -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.FinPessoal.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/primaryYellow"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendar_today"
                    app:endIconTint="@color/primaryYellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Data"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:focusable="false"
                        android:clickable="true"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tipo de Transação -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Transação"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/light_gray"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/outline"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="16dp">

                    <RadioGroup
                        android:id="@+id/radioGroupType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RadioButton
                                android:id="@+id/radioIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Receita"
                                android:textColor="@color/white"
                                android:buttonTint="@color/holo_green_light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="💹"
                                android:textSize="20sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <RadioButton
                                android:id="@+id/radioExpense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Despesa"
                                android:textColor="@color/white"
                                android:buttonTint="@color/holo_red_light" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📉"
                                android:textSize="20sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </RadioGroup>

                </com.google.android.material.card.MaterialCardView>

                <!-- Categoria -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoria"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/surface"
                    android:padding="16dp" />

                <!-- Notas/Observações -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.FinPessoal.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:startIconDrawable="@drawable/ic_notes"
                    app:startIconTint="@color/primaryYellow">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNotes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Observações (opcional)"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botões de Ação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:textSize="14sp"
                        app:backgroundTint="@color/light_gray"
                        android:textColor="@color/white"
                        app:cornerRadius="12dp"
                        android:paddingVertical="12dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Salvar"
                        android:textSize="14sp"
                        app:backgroundTint="@color/primaryYellow"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp"
                        android:paddingVertical="12dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>