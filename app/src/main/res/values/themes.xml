<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal simplificado -->
    <style name="Theme.FinPessoal" parent="Theme.Material3.Dark">
        <!-- Cores básicas -->
        <item name="colorPrimary">@color/primaryYellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/primaryBlack</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Configurações de sistema -->
        <item name="android:windowBackground">@color/primaryBlack</item>
        <item name="android:statusBarColor">@color/primaryBlack</item>
        <item name="android:navigationBarColor">@color/primaryBlack</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Remove barras de título -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo básico para botões -->
    <style name="Widget.FinPessoal.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primaryYellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo básico para campos de texto -->
    <style name="Widget.FinPessoal.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxStrokeColor">@color/outline</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="startIconTint">@color/primaryYellow</item>
        <item name="endIconTint">@color/primaryYellow</item>
    </style>
</resources>